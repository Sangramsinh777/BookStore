@model BookModel

<div class="card mb-4 shadow-sm">
    <img src=@(string.IsNullOrEmpty(Model.CoverImageUrl)? "/image/ni.jpg":Model.CoverImageUrl) class="img-thumbnail">
    <div class="card-body">
        <h3 class="card-title">@(string.IsNullOrEmpty(Model.Title) ? "Title is Not Available":Model.Title)</h3>
        <p>@(string.IsNullOrEmpty(Model.Description)? "Description Is Not Available.":Model.Description)</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a class="btn btn-sm btn-outline-secondary" asp-controller="Book" asp-action="GetBook" asp-route-id="@Model.Id">View Details</a>
            </div>
            <small class="text-muted">@(string.IsNullOrEmpty(Model.Author) ? "N.A":Model.Author)</small>
        </div>
    </div>
</div>

