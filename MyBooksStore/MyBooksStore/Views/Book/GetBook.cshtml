@{ 
    ViewData["Title"] = "Book"+Model.Title;
}
<div class="container">
    <h1 class="display-4">Book Details</h1>
    <div class="row">

        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Title</h1>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12 text-primary">
                <span class="col-form-label-sm">By:</span>
                <span class="text-monospace">@Model.Author</span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <p class="Description">
                   @Model.Description
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <button class="btn btn-outline-primary" >Read Now</button>
            </div>
        </div>

    </div>
    <div>
        <ul class="list-group">
            <li class="list-group-item"><span class="font-weight-bold">Category-</span>@Model.Category</li>
            <li class="list-group-item"><span class="font-weight-bold">TotalPages-</span>@Model.TotalPages</li>
            <li class="list-group-item"><span class="font-weight-bold">Language-</span>@Model.Language</li>
        </ul>
    </div>
    
    <div class="py-5 bg-dark">
        <h1>Similar Books</h1>
        @{
            for (int i = 0; i < 5; i++)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <svg width="100%" height="225"></svg>
                        <div class="card-body">
                            <h3 class="card-title">book.Title</h3>
                            <p>book.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/book/getbook/book.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
                                </div>
                                <small class="text-muted">book.Author</small>
                            </div>
                        </div>
                    </div>

                </div>
            }
        }

    </div>

</div>