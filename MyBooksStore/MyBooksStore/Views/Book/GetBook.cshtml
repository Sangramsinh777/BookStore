@model BookModel

<div class="container">
    <h1 class="display-4">Book Details</h1>
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndecator" class="carousel" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <li data-target="#carouselExampleIndecator" data-slide-to="@i" class="@(i==0 ? "active" :"") "></li>
                    }

                </ol>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <div classs="@(i==0 ? "carousel-item active" : "carousel-item")">
                            <img class="d-block w-100" src="@Model.Gallery[i].Url" alt="@Model.Gallery[i].Name" />
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndecator" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndecator" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

    </div>

    <div class="row">

        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Title</h1>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12 text-primary">
                <span class="col-form-label-sm">By:</span>
                <span class="text-monospace">@Model.Author</span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <p class="Description">
                    @Model.Description
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <a class="btn btn-outline-primary" href="@Model.BookPdfUrl" target="_blank">Read Now</a>
            </div>
        </div>

    </div>
    <div>
        <ul class="list-group">
            <li class="list-group-item"><span class="font-weight-bold">Category-</span>@Model.Category</li>
            <li class="list-group-item"><span class="font-weight-bold">TotalPages-</span>@Model.TotalPages</li>
            <li class="list-group-item"><span class="font-weight-bold">Language-</span>@Model.Language</li>
        </ul>
    </div>
   
    <div class="py-5 bg-dark" id="similarbooks">
        <h1>Similar Books</h1>
        @{
            for (int i = 0; i < 5; i++)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <svg width="100%" height="225"></svg>
                        <div class="card-body">
                            <h3 class="card-title">book.Title</h3>
                            <p>book.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/book/getbook/book.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
                                </div>
                                <small class="text-muted">book.Author</small>
                            </div>
                        </div>
                    </div>

                </div>
            }
        }

    </div>

</div>