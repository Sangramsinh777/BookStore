
@{ 
    ViewData["Title"] = "All Books";
}
@{ 
    var paramss= new Dictionary<string, string>()
    {
        {"id","1"},
        {"bookName","C"}
    };

}
<html>
<head>
</head>
<body>
    
    <div class="container">
        <h3 class="display-4">All Books</h3>
        <div class="row">
            @{ 
                foreach (var book in Model)
                {
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <img src=@book.CoverImageUrl class="img-thumbnail">
                                <div class="card-body">
                                    <h3 class="card-title">@book.Title</h3>
                                    <p>@book.Description</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <!-- <a href="/book/getbook/@book.Id" class="btn btn-sm btn-outline-secondary">View Details</a>-->
                                            <!--<a asp-controller="Book" asp-action="getbook" asp-route-id="@book.Id"  asp-route-bookName="@book.Title" class="btn btn-sm btn-outline-secondary">View Details</a> -->
                                            <!-- <a class="btn btn-sm btn-outline-secondary" asp-controller="Book" asp-action="getbook" asp-all-route-data="@paramss">View Details</a>-->
                                            <!--<a class="btn btn-sm btn-outline-secondary" asp-controller="Book" asp-action="getbook" asp-route-id="@book.Id" asp-fragment="similarbooks">View Details</a> -->
                                            <a class="btn btn-sm btn-outline-secondary" asp-route="BookById" asp-route-id="@book.Id">View Details</a>
                                            
                                        </div>
                                        <small class="text-muted">@book.Author</small>
                                    </div>
                                </div>
                            </div>

                        </div>
                }
            }
            
        </div>
    </div>
</body>
</html>
